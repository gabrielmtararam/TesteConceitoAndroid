<UserControl x:Class="PrototypeGuiCompositor30.UserControls.CustomFilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrototypeGuiCompositor30.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="_uc">
    
        <Grid>
        <TextBox Name="TextBox" HorizontalAlignment="Stretch" LostFocus="ChooseFileByName"  Text="{Binding Value, ElementName=_uc}" Background="Transparent"  />
        <Button Click="ChooseFile" Width="20" HorizontalAlignment="Right">...</Button>
        </Grid>
  
</UserControl>
